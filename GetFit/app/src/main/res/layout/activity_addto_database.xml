<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/enterPersonalInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:text="Enter Personal Information" />

    <EditText
        android:hint="Enter your name"

        android:layout_marginTop="80dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/add_name"/>

    <EditText
        android:hint="Phone Number"

        android:layout_marginTop="140dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/add_phone"/>

    <EditText
        android:hint="Add Weight"

        android:layout_marginTop="200dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/add_weight"/>

    <EditText
        android:hint="Add Height"

        android:layout_marginTop="260dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/add_height"/>

    <EditText
        android:hint="Dietary goal"

        android:layout_marginTop="320dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/add_goal"/>

    <Button
        android:text="Update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp"
        android:layout_marginHorizontal="110dp"
        android:background="#b3000000"
        android:id="@+id/btnAddNewName"/>

</RelativeLayout>